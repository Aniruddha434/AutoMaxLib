{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/sitemap.xml",
      "headers": {
        "content-type": "application/xml",
        "cache-control": "public, max-age=86400"
      }
    },
    {
      "src": "/robots.txt",
      "headers": {
        "content-type": "text/plain",
        "cache-control": "public, max-age=86400"
      }
    },
    {
      "src": "/site-name.txt",
      "headers": {
        "content-type": "text/plain",
        "cache-control": "public, max-age=86400"
      }
    },
    {
      "src": "/favicon.ico",
      "headers": {
        "content-type": "image/x-icon",
        "cache-control": "public, max-age=86400"
      }
    },
    {
      "src": "/favicon.svg",
      "headers": {
        "content-type": "image/svg+xml",
        "cache-control": "public, max-age=86400"
      }
    },
    {
      "src": "/assets/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|xml|txt))",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
